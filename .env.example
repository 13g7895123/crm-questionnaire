# ===========================================
# Development Environment Configuration
# Copy this file to .env and update values
# ===========================================

# Application Environment (development / production)
APP_ENV=development

# Ports
BACKEND_PORT=9104
DB_PORT=9213
PMA_PORT=8081

# Database
DB_HOST=db
DB_ROOT_PASSWORD=root_password
DB_DATABASE=crm_questionnaire
DB_USERNAME=crm_user
DB_PASSWORD=crm_password

# Cookie Security Settings
# Development: COOKIE_SECURE=false, COOKIE_HTTPONLY=false, COOKIE_DOMAIN=localhost
# Production:  COOKIE_SECURE=true,  COOKIE_HTTPONLY=true,  COOKIE_DOMAIN=crm.l
COOKIE_SECURE=false
COOKIE_HTTPONLY=false
COOKIE_SAMESITE=Lax
COOKIE_DOMAIN=localhost

# CORS Settings (comma-separated origins)
# Development: http://localhost:8104,http://localhost:3000,http://localhost:9104
# Production:  https://crm.l
CORS_ALLOWED_ORIGINS=http://localhost:8104,http://localhost:3000,http://localhost:9104
